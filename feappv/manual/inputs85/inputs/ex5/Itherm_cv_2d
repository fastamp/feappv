FEAP * * Thermal convection analysis
  0  0  0  2  1  9

PARAmeters
  h = 25
  t0 = 1

MATErial 1
  THERmal
    FOURIER ISOTROPIC  10.0   1.0
    DENSITY MASS       0.10

MATErial 2
  CONVection
    SURFace h t0

BLOCK
  CARTESIAN 40 20 0 0 1 0 0
  QUADrilateral 9
    1  0.0  0.0
    2  5.0  0.0
    3  5.0  2.5
    4  0.0  2.5

BLOCk 2 ! Convection boundary
  CART 20 2 0 0 2 0 0
    1  5.0 0.0
    2  5.0 2.5

EBOUnd
  1  0  1
  1  5  1  ! Use for steady state problem only

EDISpl
  1  0  1

END ! mesh

! Steady state solution

TIE  ! Merge convection with solid regions

!BATCh
!  TANGent,,1     ! Solve problem
!  PLOT,CONTour,1 ! Contour solution
!END

INTEractive

! Transient solution

BATCH
  ZERO     ! Zero the steady-state solution to start a zero temperature again
  MESH
END

EBOUnd SET
  1 5 0

END ! mesh

ORDER      ! Sets order of ODE for thermal problem
  1

BATCH
  PARAmeter
  DT,,dt        ! Sets to parameter value
  TRANs,BACK
  PLOT,RANG,0.4,0.9
  LOOP,,10
    TIME
    TANG,,1   ! Problem linear, no iterations
    PLOT,WIPE
    PLOT,CONT,1 ! Temperature contours
  NEXT
END
dt= 0.0001
            ! End of parameter input
BATCh
  LOOP,,3
    FUNC,tinc
    DT,,dt
    LOOP,,9
      TIME
      TANG,,1
      PLOT,WIPE
    PLOT,CONT,1 ! Temperature contours
    NEXT
  NEXT
END 

INTEractive

STOP
